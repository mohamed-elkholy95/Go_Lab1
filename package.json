{
  "name": "pythoughts",
  "type": "module",
  "version": "1.0.0",
  "description": "Full-stack blogging platform with authentication and content management",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "(astro check --minimumSeverity error || true) && astro build && pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{js,ts,astro,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,astro,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,ts,astro,tsx}\" && astro check",
    "lint:fix": "prettier --write \"src/**/*.{js,ts,astro,tsx}\"",
    "type-check": "astro check",
    "validate": "npm run format:check && npm run type-check && npm test",
    "prepare": "husky",
    "hooks:setup": "husky && chmod +x .husky/pre-commit .husky/pre-push"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.0.0",
    "@astrojs/svelte": "^6.0.0",
    "@astrojs/tailwind": "^5.1.2",
    "@neondatabase/serverless": "^0.10.3",
    "@node-rs/bcrypt": "^1.10.4",
    "astro": "^5.0.3",
    "astro-expressive-code": "^0.36.0",
    "drizzle-orm": "^0.36.4",
    "better-auth": "^1.1.4",
    "marked": "^15.0.4",
    "pagefind": "^1.1.1",
    "resend": "^4.0.1",
    "svelte": "^5.1.9",
    "swup": "^4.8.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.7.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/marked": "^6.0.0",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@vitest/ui": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "vitest": "^1.0.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,astro}": [
      "prettier --write",
      "astro check --minimumSeverity warning"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
