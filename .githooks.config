# Git Hooks Configuration
# Enable/disable specific validation checks
# Edit this file to customize which checks run before push

# TypeScript type checking
# Validates all TypeScript code for type errors
ENABLE_TYPESCRIPT_CHECK=true

# ESLint code quality
# Enforces code style and best practices
ENABLE_LINT_CHECK=true

# Security vulnerability scanning
# Checks for known vulnerabilities in dependencies
ENABLE_SECURITY_CHECK=true

# Build validation
# Ensures the project builds successfully
ENABLE_BUILD_CHECK=true

# Dependency health check
# Validates package.json and checks dependencies
ENABLE_DEPENDENCY_CHECK=true

# Unit tests
# Runs test suite if configured
ENABLE_TEST_CHECK=true

# Secret detection
# Scans for accidentally committed secrets
ENABLE_SECRET_CHECK=true

# Code complexity analysis
# Checks for overly complex code (informational only)
ENABLE_COMPLEXITY_CHECK=true

# Fail on warnings (set to false to only fail on errors)
FAIL_ON_WARNINGS=false

# Skip hook with --no-verify (set to true to allow skipping)
ALLOW_SKIP=true
