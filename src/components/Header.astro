---
interface Props {
  user?: {
    id: string;
    name: string;
    email: string;
    username: string;
    role: 'admin' | 'author' | 'user';
  } | null;
}

const { user } = Astro.props;
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 backdrop-blur-xl border-b transition-all duration-300" style="background: var(--surface); border-color: var(--border);">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold transition-all duration-300 hover:scale-105" style="color: var(--accent);">
          <span class="dark:terminal-glow">Pythoughts</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <a
          href="/"
          class={`nav-link ${currentPath === '/' ? 'active' : ''}`}
        >
          Home
        </a>
        <a
          href="/posts"
          class={`nav-link ${currentPath.startsWith('/posts') ? 'active' : ''}`}
        >
          Posts
        </a>
        <a
          href="/search"
          class={`nav-link ${currentPath === '/search' ? 'active' : ''}`}
        >
          <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          Search
        </a>

        {user ? (
          <div class="flex items-center space-x-4">
            {(user.role === 'admin' || user.role === 'author') && (
              <a
                href="/admin/dashboard"
                class="nav-link"
              >
                Dashboard
              </a>
            )}
            <div class="relative group">
              <button class="flex items-center space-x-2 nav-link group/avatar">
                {user.avatarUrl ? (
                  <img src={user.avatarUrl} alt={user.name} class="w-8 h-8 rounded-full ring-2 ring-transparent group-hover/avatar:ring-accent transition-all duration-300" />
                ) : (
                  <div class="w-8 h-8 rounded-full flex items-center justify-center font-semibold transition-all duration-300 group-hover/avatar:scale-110" style="background: var(--accent); color: var(--accent-fg);">
                    {user.name?.charAt(0).toUpperCase() || 'U'}
                  </div>
                )}
                <span class="hidden lg:inline">{user.name}</span>
                <svg class="w-4 h-4 transition-transform duration-300 group-hover/avatar:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <!-- Dropdown Menu -->
              <div class="absolute right-0 mt-2 w-48 rounded-xl shadow-2xl border opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform scale-95 group-hover:scale-100 backdrop-blur-xl" style="background: var(--surface); border-color: var(--border);">
                <div class="py-1">
                  <a href={`/users/${user.username}`} class="dropdown-item">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    Profile
                  </a>
                  <a href="/settings" class="dropdown-item">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Settings
                  </a>
                  <hr style="border-color: var(--border);" />
                  <form action="/api/auth/sign-out" method="POST" class="w-full">
                    <button type="submit" class="dropdown-item w-full text-left hover:!bg-error-subtle" style="color: var(--error);">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                      </svg>
                      Sign Out
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        ) : (
          <div class="flex items-center space-x-4">
            <a href="/auth/login" class="nav-link">
              Sign In
            </a>
            <a href="/auth/register" class="btn btn-primary">
              Get Started
            </a>
          </div>
        )}
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="p-2 rounded-lg transition-all duration-300 hover:scale-110"
          style="color: var(--text);"
        >
          <svg id="menu-icon" class="w-6 h-6 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 pt-2">
      <div class="flex flex-col space-y-2 rounded-xl p-2" style="background: var(--bg); border: 1px solid var(--border);">
        <a href="/" class="mobile-nav-link">Home</a>
        <a href="/posts" class="mobile-nav-link">Posts</a>
        <a href="/search" class="mobile-nav-link">Search</a>
        {user ? (
          <>
            {(user.role === 'admin' || user.role === 'author') && (
              <a href="/admin/dashboard" class="mobile-nav-link">Dashboard</a>
            )}
            <hr style="border-color: var(--border);" class="my-1" />
            <a href={`/users/${user.username}`} class="mobile-nav-link">Profile</a>
            <a href="/settings" class="mobile-nav-link">Settings</a>
            <form action="/api/auth/sign-out" method="POST">
              <button type="submit" class="mobile-nav-link w-full text-left" style="color: var(--error);">
                Sign Out
              </button>
            </form>
          </>
        ) : (
          <>
            <a href="/auth/login" class="mobile-nav-link">Sign In</a>
            <a href="/auth/register" class="mobile-nav-link" style="background: var(--accent); color: var(--accent-fg);">Get Started</a>
          </>
        )}
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');

    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      // Trigger animation
      setTimeout(() => {
        mobileMenu?.classList.add('mobile-menu-open');
      }, 10);
      menuIcon?.classList.add('rotate-90');
    } else {
      mobileMenu?.classList.remove('mobile-menu-open');
      menuIcon?.classList.remove('rotate-90');
      setTimeout(() => {
        mobileMenu?.classList.add('hidden');
      }, 300);
    }
  });
</script>

<style>
  .nav-link {
    @apply font-medium transition-all duration-300 flex items-center relative;
    color: var(--text-muted);
  }

  .nav-link:hover {
    color: var(--accent);
    transform: translateY(-1px);
  }

  .nav-link.active {
    color: var(--accent);
    font-weight: 600;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent);
    border-radius: 2px;
  }

  #mobile-menu {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease-in-out;
  }

  #mobile-menu.mobile-menu-open {
    max-height: 500px;
    opacity: 1;
  }

  .mobile-nav-link {
    @apply block px-4 py-2.5 rounded-lg transition-all duration-200;
    color: var(--text);
  }

  .mobile-nav-link:hover {
    background: var(--accent-subtle);
    color: var(--accent);
    transform: translateX(4px);
  }

  .dropdown-item {
    @apply block px-4 py-2.5 text-sm transition-all duration-200 flex items-center gap-2 rounded-lg mx-1;
    color: var(--text);
  }

  .dropdown-item:hover {
    background: var(--accent-subtle);
    color: var(--accent);
    transform: translateX(4px);
  }
</style>
