#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pythoughts Commit Message Hook
# Enforces conventional commit format for better changelog generation and semantic versioning
# Format: type(scope?): subject

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Skip validation for merge commits
if echo "$COMMIT_MSG" | grep -qE "^Merge"; then
    exit 0
fi

# Conventional Commits regex
# Format: type(scope?): description
CONVENTIONAL_COMMIT_REGEX="^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\(.+\))?: .{1,100}"

# Check commit message format
if ! echo "$COMMIT_MSG" | grep -qE "$CONVENTIONAL_COMMIT_REGEX"; then
    echo "${RED}❌ Invalid commit message format!${NC}\n"
    echo "${YELLOW}Commit message must follow Conventional Commits format:${NC}"
    echo "${BLUE}  type(scope?): subject${NC}\n"
    echo "${YELLOW}Valid types:${NC}"
    echo "  ${GREEN}feat${NC}     - A new feature"
    echo "  ${GREEN}fix${NC}      - A bug fix"
    echo "  ${GREEN}docs${NC}     - Documentation changes"
    echo "  ${GREEN}style${NC}    - Code style changes (formatting, etc.)"
    echo "  ${GREEN}refactor${NC} - Code refactoring"
    echo "  ${GREEN}perf${NC}     - Performance improvements"
    echo "  ${GREEN}test${NC}     - Adding or updating tests"
    echo "  ${GREEN}chore${NC}    - Maintenance tasks"
    echo "  ${GREEN}build${NC}    - Build system changes"
    echo "  ${GREEN}ci${NC}       - CI/CD changes"
    echo "  ${GREEN}revert${NC}   - Revert previous commit\n"
    echo "${YELLOW}Examples:${NC}"
    echo "  ${BLUE}feat(auth): add OAuth login support${NC}"
    echo "  ${BLUE}fix(api): resolve race condition in user creation${NC}"
    echo "  ${BLUE}docs: update README with setup instructions${NC}"
    echo "  ${BLUE}refactor(database): optimize query performance${NC}\n"
    echo "${YELLOW}Your commit message:${NC}"
    echo "  ${RED}$COMMIT_MSG${NC}\n"
    exit 1
fi

# Check for minimum subject length
SUBJECT=$(echo "$COMMIT_MSG" | head -n1 | sed -E 's/^[a-z]+(\(.+\))?: //')
if [ ${#SUBJECT} -lt 10 ]; then
    echo "${RED}❌ Commit subject too short!${NC}"
    echo "${YELLOW}   Subject must be at least 10 characters${NC}\n"
    exit 1
fi

# Check for maximum subject length
if [ ${#SUBJECT} -gt 100 ]; then
    echo "${RED}❌ Commit subject too long!${NC}"
    echo "${YELLOW}   Subject must be no more than 100 characters${NC}"
    echo "${YELLOW}   Use commit body for additional details${NC}\n"
    exit 1
fi

# Success
echo "${GREEN}✓ Commit message format valid${NC}"
exit 0
